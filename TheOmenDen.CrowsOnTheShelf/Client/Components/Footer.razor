<Container Fluid Background="Background.Dark" TextColor="TextColor.Light">
    <Row>
        <Column ColumnSize="ColumnSize.IsFull.IsThird.OnDesktop">
            <Heading Size="HeadingSize.Is5">Our Company</Heading>
            <UnorderedList TextColor="TextColor.Light">
                <UnorderedListItem Margin="Margin.Is1.FromBottom">
                    <Blazorise.Link TextColor="TextColor.Secondary"
                                    To="https://theomenden.com/"
                                    Title="The Omen Den Store">
                        The Omen Den
                    </Blazorise.Link>
                </UnorderedListItem>
                <UnorderedListItem Margin="Margin.Is1.FromBottom">
                    <Blazorise.Link TextColor="TextColor.Secondary"
                                    To="https://aluthecrow.info/"
                                    Title="Alu's Carrd">
                        Alu's Carrd
                    </Blazorise.Link>
                </UnorderedListItem>
                <UnorderedListItem Margin="Margin.Is1.FromBottom">
                    <Blazorise.Link TextColor="TextColor.Secondary"
                                    To="https://github.com/theomenden"
                                    Title="The Omen Den's GitHub">
                        Our Github
                    </Blazorise.Link>
                </UnorderedListItem>
            </UnorderedList>
        </Column>
        <Column ColumnSize="ColumnSize.IsFull.IsThird.OnDesktop">
            Powered by
            <Blazorise.Link TextColor="TextColor.Secondary" Class="text-decoration-none"
                            To="https://blazorise.com/" Target="Target.Blank"
                            Title="Blazorise">Blazorise</Blazorise.Link>
            <Small Margin="Margin.Is3.FromBottom" TextColor="TextColor.Muted">Copyright <Icon Name="IconName.Copyright" TextColor="TextColor.Muted"/> @DateTime.Today.Year Megabit Ltd</Small>
        </Column>
        <Column ColumnSize="ColumnSize.IsFull.IsThird.OnDesktop">
            <Heading Size="HeadingSize.Is5">Information</Heading>
            <UnorderedList>
                <UnorderedListItem Margin="Margin.Is1.FromBottom">
                    <Small>The Omen Den L.L.C.<Icon Name="@("fa fa-trademark")" /> @DateTime.Today.Year</Small>
                </UnorderedListItem>
                <UnorderedListItem Margin="Margin.Is1.FromBottom">
                    <Small><Icon Name="IconName.Code"/>Version - 0.11.12427</Small>
                </UnorderedListItem>
                <UnorderedListItem>
                    <Small>By using this site, you agree to our Terms of Service (TOS) and Privacy Policy</Small>
