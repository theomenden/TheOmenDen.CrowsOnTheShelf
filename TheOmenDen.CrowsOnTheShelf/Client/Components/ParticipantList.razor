@using TheOmenDen.CrowsOnTheShelf.Client.Services
<ListGroup Flush Background="Background.Dark">
    <Repeater TItem="Participant" Items="_participants">
        <ListGroupItem Name="@context.Id.ToString()" Background="Background.Transparent"
                       Margin="Margin.IsAuto.OnX">
            <Card Background="Background.Dark"
                  Shadow="Shadow.Default"
                  Border="Border.Is0.OnAll.Rounded"
                  TextAlignment="TextAlignment.Start">
                <CardBody>
                    <ParticipantDisplay Participant="@context" />
                </CardBody>
            </Card>
        </ListGroupItem>
    </Repeater>
</ListGroup>